<html lang="en">
  <head>{{>header}}
    <title>{{blog.title}}</title>
  </head>
  <body>
   {{>navbar}}
   <div class="container mt-3">

  <h1>{{blog.title}}</h1>
  <div class="container">
<img src="{{blog.createdBy.profileImageUrl}}" class="img-fluid" width="30px" alt="{{blog.createdBy.profileImageUrl}}">
  Created by: {{blog.createdBy.fullName}}
  </div>

<div class="container row">

  
<img src="{{blog.coverImageURL}}" class="img-fluid" alt="{{blog.coverImageURL}}">
<pre>{{blog.content}}</pre>




</div>

<hr>

{{#if user}}
    <div class=" mt-3">
  <h1>Comments</h1>

  <form action="/blog/comment/{{blog._id}}" method="post">

  <div class="mb-3">
    <input type="text" class="form-control" name="content" placeholder="Enter your comment" id="content" aria-describedby="content">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
</div>
{{else}}
    <div class=" mt-3">
      <h3>Login for comment</h3>
    </div>
{{/if}}
{{#each comment }}
  
  <div class=" mt-3">
    <img src="{{this.createdBy.profileImageUrl}}" class="img-fluid" width="30px" alt="{{this.createdBy.profileImageUrl}}">
 <b>{{this.createdBy.fullName}}</b>
    <div class="px-4">

 {{this.content}}

    </div>

  </div>
{{/each}}



</div>
    {{>script}}
  </body>
</html>